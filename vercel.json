{
  "version": 2,
  "builds": [
    { "src": "api/server.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/", "dest": "/public/app.html" },
    { "src": "/file-content", "dest": "/api/server.js" },
    { "src": "/folder-structure", "dest": "/api/server.js" },
    { "src": "/roadcode", "dest": "/public/roadcode.html" },
    { "src": "/codecss", "dest": "/public/code.css" },
    { "src": "/style", "dest": "/public/style.css" }
  ]
}